{
  "name": "eribertolopez-infrastructure",
  "version": "1.0.0",
  "description": "AWS CDK infrastructure for Eriberto Lopez Portfolio",
  "author": "elopez",
  "bin": {
    "infrastructure": "bin/infrastructure.js"
  },
  "scripts": {
    "watch": "rspack --watch --mode development",
    "test": "jest",
    "cdk": "cdk",
    "deploy": "cdk deploy --all --require-approval never",
    "deploy:frontend": "cdk deploy --all -c target=frontend --require-approval never",
    "deploy:backend": "cdk deploy --all -c target=backend --require-approval never",
    "deploy:backend:show-url": "npm run deploy:backend && npm run get-url",
    "deploy:frontend:show-url": "npm run deploy:frontend && npm run get-url",
    "get-url": "../scripts/get-frontend-url.sh",
    "diff": "cdk diff",
    "diff:frontend": "cdk diff -c target=frontend",
    "diff:backend": "cdk diff -c target=backend",
    "synth": "cdk synth",
    "synth:frontend": "cdk synth -c target=frontend",
    "synth:backend": "cdk synth -c target=backend",
    "bootstrap": "cdk bootstrap",
    "bootstrap:frontend": "cdk bootstrap -c target=frontend",
    "bootstrap:backend": "cdk bootstrap -c target=backend",
    "local": "cdklocal deploy --require-approval never",
    "local:bootstrap": "cdklocal bootstrap",
    "local:deploy": "cdklocal deploy --all --require-approval never",
    "local:deploy:frontend": "cdklocal deploy -c target=frontend --require-approval never",
    "local:deploy:backend": "cdklocal deploy -c target=backend --require-approval never",
    "local:destroy": "cdklocal destroy --all --force",
    "local:hotswap": "cdklocal deploy --hotswap --all --require-approval never",
    "dev": "npm-run-all --parallel watch local:hotswap:loop",
    "local:hotswap:loop": "nodemon --verbose --watch ../backend/dist --ext js --exec \"npm run local:hotswap || true\""
  },
  "devDependencies": {
    "@rspack/cli": "^1.4.11",
    "@types/jest": "^29.4.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^18.14.6",
    "aws-cdk": "^2.1024.0",
    "aws-cdk-lib": "^2.210.0",
    "constructs": "^10.4.2",
    "jest": "^29.5.0",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "swc-loader": "^0.2.6",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@aws-solutions-constructs/aws-openapigateway-lambda": "^2.90.4",
    "aws-cdk-local": "^3.0.1",
    "js-yaml": "^4.1.0",
    "source-map-support": "^0.5.21"
  }
}
